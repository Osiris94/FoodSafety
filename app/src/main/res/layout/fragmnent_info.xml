<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp64">


        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/dp50"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp17"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_back" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/dp202"
            android:layout_height="@dimen/dp26"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_top_title_name">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp13"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22">

                <TextView
                    android:id="@+id/tv_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="请填写身份证号码"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />

                <EditText
                    android:id="@+id/edt_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp20"
                    android:layout_toRightOf="@+id/tv_card"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/gray_line_e3" />

            <RelativeLayout
                android:id="@+id/rl_nick_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="身份"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/tv_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:text="餐饮服务从业人员"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/gray_line_e3" />

            <RelativeLayout
                android:id="@+id/rl_birthday"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="姓名"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/gray_line_e3" />

            <RelativeLayout
                android:id="@+id/rl_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/sex"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:text="男"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/gray_line_e3" />

            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/phone_num"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/gray_line_e3" />


            <RelativeLayout
                android:id="@+id/rl_work_status"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="通知栏"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/tv_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:text="暂无新的课程"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/gray_line_e3" />


            <RelativeLayout
                android:id="@+id/rl_study_num"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="单位名称"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/gray_line_e3" />

            <RelativeLayout
                android:id="@+id/rl_study_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="已学习时长"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/tv_study_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/gray_line_e3" />

            <RelativeLayout
                android:id="@+id/rl_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginRight="@dimen/dp22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="视频已观看时长"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/tv_video_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:textColor="@color/txt_important_black_51"
                    android:textSize="@dimen/sp15" />


            </RelativeLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>